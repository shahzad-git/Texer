<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.semicolen.shahzadusamahaseebproject">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_texer_logo_square"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_texer_logo_circle"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".FilesListActivity" />
        <activity android:name=".ImageCropActivity" />
        <activity android:name=".ImageEditingActivity" />
        <activity android:name=".TextDisplayActivity" />
        <activity android:name=".DisplayImageActivity" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
        </activity>


    </application>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>